@page
@model EligibleBuildEvidenceCheckModel
@{
    ViewData["PageId"] = "CD177";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
                There is a problem
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                    <li>
                        <a href="#newEligibleBuildEvidenceCheck-1">[error message]</a>
                    </li>
                </ul>
            </div>
        </div>
        <h1 class="govuk-heading-xl">
            Upload evidence
        </h1>
        <h2 class="govuk-heading-l">
            Files added
        </h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    File 1
                </dt>
                <dd class="govuk-summary-list__value">
                    <p class="govuk-body"><a class="govuk-link govuk-link--no-visited-state" href="#">build-evidence.docx</a> (2MB)</p>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link govuk-link--no-visited-state" href="installer-application-new-eligible-build-evidence?delete=build-evidence.docx">
                        Delete<span class="govuk-visually-hidden"> </span>
                    </a>
                </dd>
            </div>
        </dl>
        <form method="POST" novalidate>
            <div class="govuk-form-group govuk-form-group--error">
                <fieldset class="govuk-fieldset" aria-describedby="newEligibleBuildEvidenceCheck-error">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        Do you want to upload another file?
                    </legend>
                    <p id="newEligibleBuildEvidenceCheck-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span>
                        [error message]
                    </p>
                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="newEligibleBuildEvidenceCheck-1" name="newEligibleBuildEvidenceCheck" type="radio" value="Yes">
                            <label class="govuk-label govuk-radios__label" for="newEligibleBuildEvidenceCheck-1">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="newEligibleBuildEvidenceCheck-2" name="newEligibleBuildEvidenceCheck" type="radio" value="No">
                            <label class="govuk-label govuk-radios__label" for="newEligibleBuildEvidenceCheck-2">
                                No
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button id="continue-button" class="govuk-button" data-module="govuk-button">
                Continue
            </button>
            <partial name="_CancelApplication" model="null" />
        </form>
    </div>
</div>